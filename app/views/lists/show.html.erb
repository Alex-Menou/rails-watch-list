<h1>Lists#show</h1>
<p>Find me in app/views/lists/show.html.erb</p>

<%= link_to "Mes listings", root_path, class: 'btn btn-primary' %><br>

  <%= button_to "Remove this list", @list, method: :delete, class: 'btn btn-primary'  %>


<h2>Liste des films de la liste</h2>
<% @movies.each do |movie| %>
  <%= movie.title %><br>
  <%= movie.overview %><br>
  <img src="<%= movie.poster_url %>" height="200"><br>
  <%= movie.rating %><br>

  <%= button_to "Supp film", bookmark_path(movie.bookmark_ids.first), method: :delete, class: 'btn btn-primary' %><br>
<% end %>


<button type="button" class="btn btn-primary" data-turbo="false" data-bs-toggle="modal" data-bs-target="#moviesModal" data-bs-whatever="Movies">Ajouter un film</button>
<%= render 'movie_modal' %>
